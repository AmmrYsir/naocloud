---
/**
 * modules.astro – Module management page
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Sidebar from "../components/Sidebar.astro";
import ModuleManager from "../components/ModuleManager";
import { getUserFromCookies } from "../lib/auth";

const user = getUserFromCookies(Astro.cookies);
if (!user) return Astro.redirect("/login");
---

<BaseLayout title="Modules – ServerPilot">
	<Sidebar />
	<div class="flex flex-1 flex-col md:ml-64">
		<Navbar username={user.username} />

		<main class="flex-1 p-4 pb-20 md:p-6 md:pb-6">
			<div class="mb-6">
				<h1 class="text-2xl font-bold tracking-tight">Modules</h1>
				<p class="mt-1 text-sm text-gray-500">
					Manage built-in and external modules
				</p>
			</div>

			<ModuleManager client:load />
		</main>
	</div>
</BaseLayout>
